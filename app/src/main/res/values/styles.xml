<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="playBarBackground">@color/white_96p</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorControlNormal">@android:color/holo_red_dark</item>
        <item name="colorControlActivated">@android:color/holo_red_light</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.MaterialComponents">

    </style>

    <attr name="playBarBackground" format="reference"/>

    <style name="MyAppTheme" parent="AppBaseTheme"/>

</resources>
