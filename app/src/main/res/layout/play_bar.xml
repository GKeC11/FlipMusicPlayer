<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/play_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:background="@color/white_96p">

        <TextView
            android:id="@+id/playBar_musicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:text="无音乐"/>

        <ImageView
            android:id="@+id/playBar_playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_circle_filled_24dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/playBar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/playBar_musicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_queue_music_black_24dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/playBar_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progressDrawable="@drawable/progress_bar_style"/>

</FrameLayout>